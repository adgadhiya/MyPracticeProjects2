<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.unknown.travistutorial.SQLiteDataBaseClass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:paddingRight="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNAME"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURNAME:"
        android:paddingRight="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView8"
        android:layout_below="@+id/etNAME"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSURNAME"
        android:layout_below="@+id/etNAME"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMARKS"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/etSURNAME"
        android:layout_alignStart="@+id/etSURNAME" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARKS:"
        android:paddingRight="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/etMARKS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etID"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/etMARKS"
        android:layout_alignStart="@+id/etMARKS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID:"
        android:layout_alignParentLeft="true"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/etID"
        android:layout_toLeftOf="@+id/etID"
        android:layout_toStartOf="@+id/etID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/INSERT"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/DELETE"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/VIEW"
        android:layout_toEndOf="@+id/VIEW" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/UPDATE"
        android:layout_below="@+id/INSERT"
        android:layout_toRightOf="@+id/INSERT"
        android:layout_toEndOf="@+id/INSERT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        android:id="@+id/VIEW"
        android:layout_alignTop="@+id/INSERT"
        android:layout_alignLeft="@+id/UPDATE"
        android:layout_alignStart="@+id/UPDATE" />


</RelativeLayout>
